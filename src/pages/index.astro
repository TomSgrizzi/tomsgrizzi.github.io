      /* Flip effect styles (unchanged) */
.flip-container {
  perspective: 1000px;
  width: 160px;
  height: 160px;
  margin: 0 auto;
}

.flipper {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.8s;
  transform-style: preserve-3d;
}

.flip-container:hover .flipper {
  transform: rotateY(180deg);
}

.front, .back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 50%;
}

.back {
  transform: rotateY(180deg);
}

/* ---- Article Grid Styles ---- */
.article-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 columns */
  gap: 20px; /* Space between grid items */
  margin-top: 2rem;
}

.article {
  border-radius: 10px;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.article img {
  width: 100%;
  border-radius: 10px;
  display: block;
}

/* Overlay styling */
.overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  color: white;
  text-align: left;
}

.overlay h3,
.overlay p,
.overlay a {
  margin: 5px 0;
}

.overlay a {
  color: rgb(176, 200, 124);
  text-decoration: none;
  font-weight: bold;
}

/* Responsive behavior: Stack on smaller screens */
@media (max-width: 768px) {
  .article-container {
    grid-template-columns: 1fr;
  }
}

